
using System;
using Server.Spells;
using Server.Spells.Druid;

namespace Server.Items
{
	public class NubiaSpellbook : Spellbook
	{
		public override SpellbookType SpellbookType{ get{ return SpellbookType.Nubia; } }
		public override int BookOffset{ get{ return 551; } }
		public override int BookCount{ get{ return 19; } }

		[Constructable]
		public NubiaSpellbook() : this( (ulong)0 )
		{
		}

		[Constructable]
		public NubiaSpellbook( ulong content ) : base( content, 0xEFA )
		{
			Hue = 0x48C;
			Name = "Magie Profane";
		}

		public override void OnDoubleClick( Mobile from )
		{
			if ( from.AccessLevel == AccessLevel.Player )
			{
				Container pack = from.Backpack;
				if( !(Parent == from || (pack != null && Parent == pack)) )
				{
					from.SendMessage( "The spellbook must be in your backpack [and not in a container within] to open." );
					return;
				}
				else if( UseRestrictions && !SpellRestrictions.CheckRestrictions( from, this ) )
				{
					return;
				}
			}

			from.CloseGump( typeof( NubiaSpellbookGump ) );
			from.SendGump( new NubiaSpellbookGump( from, this ) );
		}

		public NubiaSpellbook( Serial serial ) : base( serial )
		{
		}

		public override void Serialize( GenericWriter writer )
		{
			base.Serialize( writer );
			writer.Write( (int) 0 ); // version
		}

		public override void Deserialize( GenericReader reader )
		{
			base.Deserialize( reader );
			int version = reader.ReadInt();
		}
	}
}
